# Default server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

    root /var/www/personal/public;
    gzip on;
    gzip_types text/plain text/html text/css application/javascript image/* image/webp image/apng;

	# Add index.php to the list if you are using PHP
	index index.php index.html index.htm index.nginx-debian.html;

	server_name michaeljmiller.net www.michaeljmiller.net;

	location / {
		try_files $uri $uri/ /index.php?$query_string;
	}

    location ~* \.(css|js)$ {
        expires 365d;
    }

    location ~* \.(jpg|jpeg|png|gif|ico)$ {
        expires 30d;
    }

	# pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
	#
	location ~ \.php$ {
		# include snippets/fastcgi-php.conf;

		# With php7.1-cgi alone:
		# fastcgi_pass 127.0.0.1:9000;
		# With php7.1-fpm:
		# fastcgi_pass php-fpm:/run/php/php7.3-fpm.sock;

        fastcgi_pass  php-fpm:9000;
        fastcgi_index index.php;

        fastcgi_param SCRIPT_FILENAME /var/www/personal/public$fastcgi_script_name;
        fastcgi_param QUERY_STRING    $query_string;
        fastcgi_param REQUEST_METHOD  $request_method;
        fastcgi_param CONTENT_TYPE    $content_type;
        fastcgi_param CONTENT_LENGTH  $content_length;
	}

}
